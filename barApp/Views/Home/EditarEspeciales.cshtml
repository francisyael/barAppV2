        <div class="form-group  mb-4">
            <div class="input-group mb-4">

                &nbsp;&nbsp;@Html.DropDownList("ddlIdProducto", new SelectList((System.Collections.IEnumerable)ViewData["TipoProducto"], "idProducto", "nombre"), "Seleccionar Productos", htmlAttributes: new { @class = "form-control", @required = "required", style = "font-weight:600", id = "ddlIdProducto" })

                <span class="input-group-text"><i class="fa fa-save"></i></span>
                <span class="input-group-text"><i class="fa fa-search fa-1x"></i></span>



            </div>
        </div>*@


        @*<div class="form-group  mb-4">
            @Html.Label("cantidad", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.idProductoEspecialCantidad, new { htmlAttributes = new { @class = "form-control", @required = "required", id = "cantidadC" } })
                @Html.ValidationMessageFor(model => model.idProductoEspecialCantidad, "", new { @class = "text-danger" })
            </div>
        </div>*@


        <div class="form-group">
            @Html.Label("Hora Inicial (Deshabilitado)", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.iniciolEspecial, new { htmlAttributes = new { @class = "form-control", @type = "time", id = "HoraInicialF",disabled= "disabled" } })
                @Html.ValidationMessageFor(model => model.iniciolEspecial, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Hora Final", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.finalEspecial, new { htmlAttributes = new { @class = "form-control", @type = "time", id = "HoraFinalF",disabled= "disabled" } })
                @Html.ValidationMessageFor(model => model.finalEspecial, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.activo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBox("activoF", new { htmlAttributes = new { @class = "form-control", id = "activoF" } })
                    @Html.ValidationMessageFor(model => model.activo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary">Guarda</button>
            </div>
        </div>
    </div>
}



<script>
    function onSuccessEditarEspeciales() {

        $("#ModalEditarEspeciales").modal("hide")
    }
</script>


