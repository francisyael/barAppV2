@model barApp.Producto

@using (Ajax.BeginForm("EditarEspeciales", FormMethod.Post, new AjaxOptions { LoadingElementId = "Progress", InsertionMode = InsertionMode.Replace, UpdateTargetId = "Contenedor", OnSuccess = "onSuccessEditarEspeciales", OnFailure = "onFailureAjax" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("idEspecial", htmlAttributes: new { @class = "control-label col-md-2", id = "idEspecialC" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.idProducto, new { htmlAttributes = new { @class = "form-control", id = "idProductoF", @required = "required", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.idProducto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @required = "required", id = "NombreE" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group  mb-4">
            @Html.LabelFor(model => model.precioVenta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.precioVenta, new { htmlAttributes = new { @class = "form-control", @required = "required", id = "precioVentaE" } })
                @Html.ValidationMessageFor(model => model.precioVenta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group  mb-4">
            <div class="input-group mb-4">

                &nbsp;&nbsp;@Html.DropDownList("idCategoria", new SelectList((System.Collections.IEnumerable)ViewData["TipoCategoria"], "idCategoria", "nombre"), "Seleccionar Categoria", htmlAttributes: new { @class = "form-control", @required = "required", id = "idCategoriaF" })
                @Html.ValidationMessageFor(model => model.idCategoria, "", new { @class = "text-danger" })

            </div>
        </div>

