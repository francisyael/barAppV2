@model barApp.Categoria

@using (Ajax.BeginForm("EditarCategoria", FormMethod.Post, new AjaxOptions { LoadingElementId = "Progress", InsertionMode = InsertionMode.Replace, UpdateTargetId = "Contenedor", OnSuccess = "onSuccessEditarCategoria", OnFailure = "onFailureAjax" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.EditorFor(model => model.idCategoria, new { htmlAttributes = new { @class = "form-control", id = "idCategoriaE", @style = "display:none;" } })


        <div class="form-group">
            @Html.LabelFor(model => model.idTipoCategoria, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DropDownListFor(model => model.idTipoCategoria, new SelectList((System.Collections.IEnumerable)ViewData["TipoCategoria"], "id", "Tipo"), "Seleccionar", htmlAttributes: new { @class = "form-control", id = "idTipoCategoriaE", @required = "required" })
                @Html.ValidationMessageFor(model => model.idTipoCategoria, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", id = "NombreE", @required = "required" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.activo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBox("activoE", new { htmlAttributes = new { @class = "form-control"} })
                @*@Html.EditorFor(model => model.activo, new { htmlAttributes = new { @class = "form-control", id = "activoE", @required = "required" } })*@
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary">Guarda</button>
            </div>
        </div>
    </div>
}



<script>
    function onSuccessEditarCategoria() {

        $("#ModalEditarCategoria").modal("hide")
    }
</script>


