        @Html.ActionLink("Back to List", "Index")
    </div>*@


<script>
    function onSuccessCrearCategoria() {

        $("#NuevaCategoria").modal("hide")
    }
</script>


<script>
    function onFailureAjax() {

        $("#NuevaCategoria").modal("hide")
    }
</script>
