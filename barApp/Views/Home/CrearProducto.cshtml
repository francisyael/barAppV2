@model barApp.Producto

@using (Ajax.BeginForm("CrearProducto", FormMethod.Post, new AjaxOptions { LoadingElementId = "Progress", InsertionMode = InsertionMode.Replace, UpdateTargetId = "Contenedor", OnSuccess = "onSuccessCrearProducto", OnFailure = "onFailureAjax" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.idProducto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.idProducto, new { htmlAttributes = new { @class = "form-control", id = "CodigoC", @required = "required", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.idProducto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @required = "required", id = "NombreC" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.precioVenta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.precioVenta, new { htmlAttributes = new { @class = "form-control", @required = "required", id = "precioVentaC" } })
                @Html.ValidationMessageFor(model => model.precioVenta, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group  mb-4">
            @Html.LabelFor(model => model.precioFiesta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.precioFiesta, new { htmlAttributes = new { @class = "form-control", @required = "required", id = "precioFiestaC" } })
                @Html.ValidationMessageFor(model => model.precioFiesta, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group  mb-4">
            @Html.LabelFor(model => model.precioAlmacen, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.precioAlmacen, new { htmlAttributes = new { @class = "form-control", @required = "required", id = "precioAlmacenC" } })
                @Html.ValidationMessageFor(model => model.precioAlmacen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group  mb-4">
            <div class="input-group mb-4">

                &nbsp;&nbsp;@Html.DropDownList("idCategoria", new SelectList((System.Collections.IEnumerable)ViewData["TipoCategoria"], "idCategoria", "nombre"), "Seleccionar Categoria", htmlAttributes: new { @class = "form-control", @required = "required", id = "idCategoriaC" })
                @Html.ValidationMessageFor(model => model.idCategoria, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.activo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.activo, new { htmlAttributes = new { @class = "form-control", id = "activoC" } })
                    @Html.ValidationMessageFor(model => model.activo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary">Guarda</button>
            </div>
        </div>
    </div>
        }


        <script>
            function onSuccessCrearProducto() {

                $("#NuevoProducto").modal("hide")
                $("#CodigoC").val("")
                $("#NombreC").val("")
                $("#precioVentaC").val("")
                $("#precioAlmacenC").val("")



            }
        </script>


        <script type="text/javascript">
            $(function () {
                $("#idCategoriaC").select2();
            });



        </script>
