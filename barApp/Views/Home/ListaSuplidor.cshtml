@model IEnumerable<barApp.Suplidor>

@if (ViewData["ListaSuplidor"] != null)
{
    <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">

        <tr class="odd">
            <th>
                @Html.DisplayNameFor(model => model.idSuplidor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rnc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.direccion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in ViewData["ListaSuplidor"] as IEnumerable<barApp.Suplidor>)
        {
    <tr class="odd">
        <td>
            @Html.DisplayFor(modelItem => item.idSuplidor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rnc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            <button data-toggle="modal" onclick="myfunction()" class="btn btn-link" data-target="#ModalEditarSuplidor"> <i class="fas fa-edit fa-1x"></i> </button>

            @Ajax.ActionLink(" ", "EliminarSuplidor", "Home", new { id = item.idSuplidor }, new AjaxOptions()
       {
           HttpMethod = "POST",
           UpdateTargetId = "Contenedor",
           InsertionMode = InsertionMode.Replace,
           LoadingElementId = "progress",

           //OnBegin = "onBeginAjax",
           //OnComplete = "onCompleteAjax",
           OnSuccess = "onSuccessEliminar",
           OnFailure = "onFailureAjax",
       }, new { @class = "fa fa-eraser fa-1x text-danger" })


        </td>
    </tr>
        }

    </table>
}


@{Html.RenderPartial("ModalMessenge", ViewData["Alert"] as barApp.Models.InfoMensaje);}